<body>
  <div class="container">
    <div class="row">
      <div class="col">
        
          <h1 class=display-1> <%= user.username%></h1>

         <dl class="row fs-4">

          <dt class="col-sm-3">Full Name:</dt>
          <dd class="col-sm-9"><%= user.fullname %></dd>

          <dt class="col-sm-3">Date of Birth:</dt>
          <dd class="col-sm-9"><%= user.date_of_birth_formatted %></dd>

          <dt class="col-sm-3">Country:</dt>
          <dd class="col-sm-9"><%= user.country %></dd>

          <dt class="col-sm-3">City:</dt>
          <dd class="col-sm-9"><%= user.city %></dd>

          <dt class="col-sm-3">Gender:</dt>
          <dd class="col-sm-9"><%= user.gender %></dd>
        
          <dt class="col-sm-3">User ID:</dt>
          <dd class="col-sm-9"><%= user._id %></dd>   
      
        </dl>
          <div class="btn-group col-12" role="group" aria-label="Basic example">
          <a href="/home" type="button" class="btn btn-outline-success">Home</a>
          <a href="/logout" type="button" class="btn btn-outline-danger">Logout</a>
          
        </div>
      </div>
    </div>
  </div>
 
