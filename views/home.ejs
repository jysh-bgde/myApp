<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
</head>
<body>
 
  <div class="container">
    <div class="row">
      <div class="col">
        <h1> <%= title %></h1>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end sticky-top">
          <a href="<%=currentuser.url%>" class="btn btn-primary me-md-2" type="button">My Profile</a>
          <a href="/about" class="btn btn-success" type="button">About</a>
          <a href="/contact" class="btn btn-dark" type="button">contact</a>
          <a href="/logout" class="btn btn-danger" type="button">Logout</a>
        </div>
        <% posts_list.forEach(function(post){ %>
        <div class="card  my-4" style="width: 18rem;">
          <!-- <img src="" class="card-img-top" alt="postImage"> -->
          <div class="card-body px-auto">
            <h5 class="card-title"> <%= post.post_name %> </h5>
            <p class="card-text"><%= post.post_details%></p>
            <a href="<%= post.url %>" class="btn btn-primary">Go to this post</a>
          </div>
        </div>
        <% }) %>
      </div>
     
    </div>

  </div>


  
</body>
</html>