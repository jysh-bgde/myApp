      <div class="col">
        <% posts_list.forEach(function(post){ %>
          <div class="blog-preview ">
            <div class="title">
              <h5 ><%= post.post_name %></h5>
           
            </div>
            <div class="details">
              <p class=""><%= post.post_details%></p>
              <!-- <span class="material-icons">
                favorite
                </span> -->
               
                
              <div>
                <i onclick="myFunction(this)" class="fa fa-thumbs-up" style='display:inline;'></i>
                
              </div>
                
                
              <a href="<%= post.url %>" class="btn btn-primary  my-1 ms-auto">Go to this post</a>
              
              <% if (post.user_id.toString()===currentuser._id.toString()) {%>
                <a href="<%=post.url%>/delete" type='button' class="btn btn-outline-danger mx-3 my-1 fw-bold">Delete</a>
                  <%}%>
            </div>
           

          </div>
          <% }) %>

      </div>
     
    
     </div>
    </div>
  <!-- </div> -->
  <script>
    function myFunction(x) {
      x.classList.toggle("fa-click");
      x.classList.contains("fa-click") ? x.innerHTML = "<p style='display:inline;'>Liked</p>": x.innerHTML = ""
      
    }
    </script>

